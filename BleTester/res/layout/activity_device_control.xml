<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shesi.aidrive.DeviceControl" >

    <LinearLayout
        android:id="@+id/ctrl_ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/ctrl_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备名称：" />

        <TextView
            android:id="@+id/ctrl_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ctrl_txt11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址:" />

        <TextView
            android:id="@+id/ctrl_txt21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ctrl_ll_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ctrl_ll_1"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/ctrl_btn3"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:text="漆膜厚度" />

        <Button
            android:id="@+id/ctrl_btn4"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:text="距离" />

        <Button
            android:id="@+id/ctrl_btn5"
            android:layout_width="43dp"
            android:layout_height="101dp"
            android:text="电池电压" />

        <Button
            android:id="@+id/ctrl_btn6"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:text="补光灯" />

        <Button
            android:id="@+id/ctrl_btn_clear"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="清除" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ctrl_ll_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ctrl_ll_11"
        android:layout_marginTop="20dp" >

        <ExpandableListView
            android:id="@+id/ctrl_lv1"
            android:layout_width="wrap_content"
            android:layout_height="253dp" >
        </ExpandableListView>
    </LinearLayout>

    <TextView
        android:id="@+id/ctrl_txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ctrl_ll_3"
        android:layout_alignParentBottom="true"
        android:text="接收数据：" />

    <TextView
        android:id="@+id/ctrl_txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ctrl_ll_3"
        android:layout_below="@+id/ctrl_ll_11"
        android:text="状态" />

    <ToggleButton
        android:id="@+id/ctrl_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ctrl_ll_11"
        android:layout_alignTop="@+id/ctrl_ll_11"
        android:layout_toRightOf="@+id/ctrl_ll_11" />

    <TextView
        android:id="@+id/ctrl_txtData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/ctrl_txt5"
        android:text="                  ...       " />

</RelativeLayout>