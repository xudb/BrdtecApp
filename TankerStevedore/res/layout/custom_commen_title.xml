<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlCommenTitle"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@drawable/header_bar_bg"
    android:gravity="center_vertical"
    android:padding="0px" >

    <!-- Title -->

    <TextView
        android:id="@+id/ivTitleName"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="96dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@null"
        android:textSize="20sp" />

    <!-- LEFT View -->

    <TextView
        android:id="@+id/ivTitleBtnLeft"
        style="@style/TitleBtn"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/top_back_left_selector"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxWidth="90dp"
        android:minWidth="55dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:text="@null"
        android:visibility="gone" />
    <!-- Right View -->

    <TextView
        android:id="@+id/ivTitleBtnRightText"
        style="@style/TitleBtn"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxWidth="100dp"
        android:minWidth="52dp"
        android:singleLine="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivTitleBtnRightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp" 
        android:visibility="gone"/>

</RelativeLayout>