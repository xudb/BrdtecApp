<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.shesi.aidrive.DeviceControl">

    <LinearLayout
        android:id="@+id/ctrl_ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ctrl_txt1"
            android:text="设备名称："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ctrl_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ctrl_txt11"
            android:text="地址:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ctrl_txt21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ctrl_ll_11"
        android:layout_below="@id/ctrl_ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <Button
            android:id="@+id/ctrl_btn3"
            android:text="ATE0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ctrl_btn4"
            android:text="ATDPN"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ctrl_btn5"
            android:text="ATSP00"/>
        <Button
            android:id="@+id/ctrl_btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0101"/>
        <Button
            android:id="@+id/ctrl_btn7"
            android:text="03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/ctrl_ll_2"
        android:layout_below="@id/ctrl_ll_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/ctrl_txt3"
            android:text="状态:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ctrl_txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ToggleButton
            android:id="@+id/ctrl_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/ctrl_btn2"
            android:text="0100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/ctrl_btn_clear"
            android:text="clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/ctrl_ll_3"
        android:layout_below="@id/ctrl_ll_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ExpandableListView
            android:id="@+id/ctrl_lv1"
            android:layout_width="wrap_content"
            android:layout_height="150dp">

            </ExpandableListView>
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/ctrl_rl_1"
        android:layout_below="@id/ctrl_ll_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/ctrl_txt5"
            android:text="接收数据："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ctrl_txtData"
            android:layout_below="@id/ctrl_txt5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </RelativeLayout>

</RelativeLayout>
